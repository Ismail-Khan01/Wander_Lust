<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>
                <%= list.title%>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card card-list">
            <img src="<%=list.image%>" alt="listing_image" class="card-img-top show-img">
            <div class="card-body mt-3">

                <p class="card-text">
                    Owned by<i>
                        <%=list.owner.username%>
                    </i></p>
                <p class="card-text">
                    <%= list.description %>
                </p>
                <p class="card-text">
                    &#8377; <%= list.price.toLocaleString("en-IN") %>

                </p>
                <p class="card-text">

                    <%= list.location %>
                </p>
                <p class="card-text">

                    <%= list.country %>
                </p>

            </div>
        </div>

        <br />
        <div class="btns mb-4">

            <a href="/listings/<%=list.id%>/edit" class="btn btn-dark col-1 offset-3 btn-edit">Edit </a>
            <form action="/listings/<%=list.id%>?_method=DELETE" method="post">
                <button class="btn btn-dark offset-3 btn-delete">Delete </button>
            </form>
        </div>
        <hr>
        <div class="col-8 offset-3 mt-3">
            <h4>Leave a review</h4>
            <form action="/listings/<%=list.id%>/review" method="post" novalidate class="needs-validation">
                <div class="mt-3 mb-3 ">
                    <label for="range" class="form-label">Rating</label>
                    <input type="range" class="form-range" name="review[rating]" min="1" max="5">
                </div>
                <div class="mt-3 mb-3">
                    <label for="review">Comment</label>
                    <textarea name="review[comment]" id="comment" class="form-control" rows="5" cols="50"
                        style="resize: none;" required></textarea>
                    <div class="invalid-feedback">Add the comment to submit review</div>
                </div>
                <button class="btn btn-outline-dark mb-3">Submit</button>
            </form>
            <% if(list.reviews.length){%>
                <hr>
                <h1>All Reviews</h1>
                <%}%>
                    <div class="row">
                        <% for(review of list.reviews){%>
                            <div class="card col-5 ms-4 mb-3">
                                <h5 class="card-title "> Ismail khan</h5>
                                <div class="card-body">
                                    <p class="card-text">
                                        <%=review.comment %>
                                    </p>
                                    <p class="card-text">
                                        <%= review.rating%> Stars
                                    </p>
                                </div>
                                <form action="/listings/<%=list.id%>/review/<%=review.id%>?_method=DELETE" class="mb-3"
                                    method="post">
                                    <button class="btn btn-dark btn-sm">Delete</button>
                                </form>

                            </div>
                            <% }%>
                    </div>

        </div>
    </div>
    </body>