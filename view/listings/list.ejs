<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing details</h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%=list.image%>" alt="listing_image" class="card-img-top show-img">
            <div class="card-body">
                <p class="card-text">
                    <%=list.title%> <br>
                        <%= list.description %> <br>
                            &#8377; <%= list.price.toLocaleString("en-IN") %> <br>
                                <%= list.location %> <br>
                                    <%= list.country %>
                </p>
            </div>
        </div>

        <br />
        <div class="btns mb-4">
            <a href="/listings/<%=list.id%>/edit" class="btn btn-dark col-1 offset-3 btn-edit">Edit </a>
            <form action="/listings/<%=list.id%>?_method=DELETE" method="post">
                <button class="btn btn-dark offset-3 btn-delete">Delete </button>
            </form>
        </div>
    </div>
    </body>