<% layout("/layouts/boilerplate") %>

    <h3>Listing Details :</h3>
    <ul>
        <li>
            <%= list.title %>
        </li>
        <li>
            <%= list.description %>
        </li>
        <li>&#8377; <%= list.price.toLocaleString("en-IN") %>
        </li>
        <li>
            <%= list.location %>
        </li>
        <li>
            <%= list.country %>
        </li>
    </ul>
    <br />
    <button><a href="/listings/<%=list.id%>/edit">Edit listing</a></button>
    <br>
    <br>
    <form action="/listings/<%=list.id%>?_method=DELETE" method="post">
        <button>Delete the listing</button>
    </form>

    </body>